{% extends 'base.html.twig' %}
{% block title %} Artiste {% endblock %}
{% block body %}
    <header class="masthead text-white text-center" style="background-image: url('images/fond5.jpg')">
        <div class="overlay"></div>
        <div class="container">
            <div class="row">
                <div class="col-xl-9 mx-auto">
                    <h1 class="mb-5" id="h12">Mpanakanto Malagasy</h1>
                </div>
                <div class="col-md-10 col-lg-8 col-xl-7 mx-auto">
                    <form>
                        <div class="form-row">
                            <div class="col-12 col-md-12 mb-2 mb-md-0">
                                <h2 id="h2artiste">Toutes les listes des artistes Malagasy</h2>   
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </header>
    <div class="container" id="total">
            <table class="table table-striped table-dark" id="tableartiste">
                <tr>
                    <th scope="col" id="thartiste">Nom de l'artiste</th>
                    <th scope="col" id="thartiste">A propos de l'artiste</th>
                    <th scope="col" id="thartiste">Voir leurs albums</th>
                </tr>
                {% for artiste in artistes %}
                    <tr id="trartiste"> 
                        <td id="tdartiste1">{{artiste.nom}}</td>
                        <td id="tdartiste">{{artiste.apropos}}</td>
                        <td><a href="{{ path('album', {'album': artiste.id})}}" class="btn btn-success" id="btn1">{{artiste.nom}}</td>
                    </tr>  
                {% endfor %}
            </table>
    </div>
{% endblock %}