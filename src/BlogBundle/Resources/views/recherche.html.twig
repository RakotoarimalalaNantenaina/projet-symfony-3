{% extends 'base.html.twig' %}
{% block title %} Resultat de recherche {% endblock %}
{% block body %}
    <div class="container">
    <h2>Resultat de votre recherche :</h2>
     <div class="row view-group">
        {% for objet in album %}
        <div class="item col-xs-4 col-lg-4">
            <div class="thumbnail card">
                <div class="img-event">
                    <img src="{{ asset('uploads/images/products/'~objet.image)}}" alt="image" id="image1">
                </div>
                <div class="caption card-body">
                    <h4 class="group card-title inner list-group-item-heading">
                        {{objet.chanteur}}
                    </h4>
                    <p class="group inner list-group-item-text" id="palbum">
                        Cet album appartient Ã    {{objet.chanteur}} prend de la titre : <span id="spantitre">{{objet.titre}}</span>. Il a de genre 
                        <span id="spantitre"><a  href="{{ path('genre', {'genre': objet.genre})}}">{{objet.genre}}</a></span>.
                    </p>
                    <div class="row">
                        <div class="col-xs-12 col-md-6">
                            <p class="lead">
                        prix : <span id="spanprix"><a href="{{ path('prix', {'prix':objet.prix})}}">{{objet.prix}} Ar</a></span></p>
                        </div>
                        <div class="col-xs-12 col-md-6">
                        <a class="btn btn-primary" href="{{ path('panier', {'id': objet.id})}}" id="panier">Ajouter au panier</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
     <div class="row view-group">
        {% for chanteur in artiste %}
        <div class="item col-xs-4 col-lg-4">
            <div class="thumbnail card">
                <div class="caption card-body">
                    <h4 class="group card-title inner list-group-item-heading">
                        {{chanteur.nom}}
                    </h4>
                    <p class="group inner list-group-item-text" id="palbum">
                       {{chanteur.apropos}}
                    </p>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
    <a href="{{ path('liste_albums')}}">Tous les listes des albums</a><br><br>
    <a href="{{ path('accueil')}}" style="color:blueviolet;font-size:20px">Accueil</a>
    </div>
{% endblock %}